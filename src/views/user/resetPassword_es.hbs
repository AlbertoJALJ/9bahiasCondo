{{>header_es}}
<main role="main">
    <div class="col-md-12">
        <div class="card  col-lg-8 col-md-8 col-xl-8 col-sm-12 mx-auto shadow-lg p-3 mb-5 mt-5 bg-white rounded ">
            <h5 class="text-center card-header">Actualizar contraseña</h5>
            <div class="card-body">
                <form method="post" action="/huesped/update/password">
                    <div class="row">
                        <div class="form-group col mx-auto col-6">
                            <label for="password">Nueva contraseña</label>
                            <input type="password" class="form-control" id="password"
                                name="password">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</main>
